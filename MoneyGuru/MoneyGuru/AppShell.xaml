             BackgroundColor="#F3ECF3">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Button BackgroundColor="#D8BFD8" Padding="70,5,70,5" CornerRadius="10" Text="Log in" FontSize="20"  TextTransform="Uppercase" TextColor="White" Clicked="OnLoginClicked"/>
