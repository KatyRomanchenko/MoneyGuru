<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyGuru.Views.LoginEntryPage"
             BackgroundColor="#F3ECF3">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <Frame BackgroundColor="#D8BFD8" Padding="50,5,50,5" CornerRadius="10">
            <Entry x:Name="EmailEntry" Placeholder="text@example.com" PlaceholderColor="#FAFAFA" Text="{Binding Email}" Keyboard="Email" FontSize="20" TextColor="White"/>
        </Frame>

        <Frame BackgroundColor="#D8BFD8" Padding="50,5,50,5" Margin="0,10,0,0" CornerRadius="10">
            <Entry x:Name="PasswordEntry" Placeholder="********************" PlaceholderColor="#FAFAFA" Text="{Binding Password}" IsPassword="True" FontSize="20" TextColor="White"/>
        </Frame>
        <Button 
            Text="Login"
            FontSize="15"
            BackgroundColor="#4F3D6B"
            Command="{Binding LoginCommand}" 
            VerticalOptions="EndAndExpand" 
            HorizontalOptions="CenterAndExpand" 
            IsEnabled="{Binding IsLoginEnabled}" 
            Margin="0,15,0,0"
            Padding="50,5,50,5">
        </Button>
    </StackLayout>
</ContentPage>