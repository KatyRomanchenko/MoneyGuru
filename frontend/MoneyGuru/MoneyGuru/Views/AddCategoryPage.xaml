<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MoneyGuru.AddCategoryPage">

    <StackLayout Margin="20">
        <Label Text="Add Category" FontSize="25" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>

        <Entry x:Name="CategoryEntry" Placeholder="Enter Category Name"/>
        <Frame
            WidthRequest="350"
            HeightRequest="45"
            CornerRadius="15"
            Padding="0"
            BackgroundColor="#E9C31E">
            <Button
                        Text="Submit"
                        TextColor="#ffffff"
                        BackgroundColor="#E9C31E"
                        Clicked="OnSubmitClicked"/>
        </Frame>
        <Frame
            WidthRequest="350"
            HeightRequest="45"
            CornerRadius="15"
            Padding="0"
            BackgroundColor="#E9C31E">
            <Button
                        Text="Go Back"
                        TextColor="#ffffff"
                        BackgroundColor="#E9C31E"
                        Clicked="OnGoBackClicked"/>
        </Frame>
    </StackLayout>

</ContentPage>
