<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MoneyGuru.AddCategoryPage">

    <StackLayout Margin="20">
        <Label Text="Add Category" FontSize="25" HorizontalOptions="CenterAndExpand" VerticalOptions="Start"/>

        <Entry x:Name="CategoryEntry" Placeholder="Enter Category Name"/>

        <Button Text="Submit" Clicked="OnSubmitClicked"/>
        <Button Text="Go Back" Clicked="OnGoBackClicked"/>
    </StackLayout>

</ContentPage>
