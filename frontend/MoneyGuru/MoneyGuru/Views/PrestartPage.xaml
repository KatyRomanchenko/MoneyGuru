<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyGuru.PrestartPage"
			 BackgroundColor="White">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Frame
            WidthRequest="200"
            HeightRequest="200"
            CornerRadius="200"
            Padding="30,30,30,30"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Image Source="logo.png" VerticalOptions="Center" HeightRequest="200"/>
        </Frame>
        <Label Margin="0,40,0,20" Text="Welcome to Money Guru app" TextTransform="Uppercase" FontSize="25"/>
        <Button
			Text="Log In"
			TextColor="White"
			Clicked="OnLogInClicked"
			FontSize="15"
			BackgroundColor="#7853FA"
			Padding="50,5,50,5"
			Margin="0,10,0,0"
			CornerRadius="10">
        </Button>
        <Button
			Text="Sign Up"
			TextColor="White"
			Clicked="OnSignUpClicked"
			FontSize="15"
			BackgroundColor="#7853FA"
			Padding="50,5,50,5"
			Margin="0,10,0,0"
			CornerRadius="10">
        </Button>
        <Label Text="By using our app you accept our Terms and Conditions" FontSize="Small" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>